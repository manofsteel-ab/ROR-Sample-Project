<h2>This is new </h2>

<%= form_for @post do |f| %>
   <p>
   	 <%= f.label :title %>
   	 <%= f.text_field :title %>
   </p>
   <p>
   	 <%= f.label :body %>
   	 <%= f.text_area :body %>
   </p>

   <p>
   	 <%= f.select :category_id, @category.all.collect{ |x| [x.name, x.id] }, {:include_blank =>"select"} %> 
   </p>

   <p>
   	<%= f.submit "Add post" %>
   </p>

<% end %>	